# GAIA_GO Staging Environment
# Pre-production testing and validation

# Database
GAIA_DB_PATH=./data/gaia_staging.db
DATABASE_URL=sqlite:///./data/gaia_staging.db

# Server
GAIA_HOST=0.0.0.0
GAIA_PORT=8091
GAIA_ENV=staging
DEBUG=false

# API Keys
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}

# LLM Configuration
LLM_FAILOVER_ENABLED=true
LLM_DEFAULT_PROVIDER=claude
OLLAMA_ENDPOINT=http://localhost:11434
ANYTHINGLLM_ENDPOINT=http://localhost:3001

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/gaia_staging.log

# Development Features
ENABLE_PROFILING=false
ENABLE_DETAILED_ERRORS=true
RELOAD_MODULES=false

# Session Management
SESSION_TIMEOUT=3600
AUTO_CONFIRM_ENABLED=true

# Feature Flags (staging tests all production features)
FEATURE_RATE_LIMITING=true
FEATURE_BULK_OPERATIONS=true
FEATURE_APPEAL_NEGOTIATION=true
FEATURE_DISTRIBUTED_TRACING=true

# Performance Testing
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=30
