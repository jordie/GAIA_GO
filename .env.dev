# GAIA_GO Development Environment
# Isolated configuration for active development

# Database
GAIA_DB_PATH=./data/gaia_dev.db
DATABASE_URL=sqlite:///./data/gaia_dev.db

# Server
GAIA_HOST=localhost
GAIA_PORT=8090
GAIA_ENV=development
DEBUG=true

# API Keys (dev versions)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}

# LLM Configuration
LLM_FAILOVER_ENABLED=true
LLM_DEFAULT_PROVIDER=claude
OLLAMA_ENDPOINT=http://localhost:11434
ANYTHINGLLM_ENDPOINT=http://localhost:3001

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/gaia_dev.log

# Development Features
ENABLE_PROFILING=true
ENABLE_DETAILED_ERRORS=true
RELOAD_MODULES=true

# Session Management
SESSION_TIMEOUT=7200
AUTO_CONFIRM_ENABLED=true

# Feature Flags (development enables experimental features)
FEATURE_RATE_LIMITING=true
FEATURE_BULK_OPERATIONS=true
FEATURE_APPEAL_NEGOTIATION=true
FEATURE_DISTRIBUTED_TRACING=true

# Performance Testing
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=10
