          {
            "name": "error_type",
            "in": "query",
            "description": "Filter by error type",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "severity",
            "in": "query",
            "description": "Filter by severity",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "source",
            "in": "query",
            "description": "Filter by source",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Items per page",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Items to skip",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Error list"
          }
        }
      },
      "post": {
        "tags": [
          "Errors"
        ],
        "summary": "Create Error",
        "description": "Create a new error log entry (no auth required)",
        "operationId": "createError",
        "requestBody": {
          "description": "Error data",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error_type": {
                    "type": "string"
                  },
                  "message": {
                    "type": "string"
                  },
                  "severity": {
                    "type": "string",
                    "enum": [
                      "critical",
                      "high",
                      "medium",
                      "low",
                      "info"
                    ]
                  },
                  "source": {
                    "type": "string"
                  },
                  "stack_trace": {
                    "type": "string"
                  }
                },
                "required": [
                  "error_type",
                  "message",
                  "severity"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Error created"
          }
        }
