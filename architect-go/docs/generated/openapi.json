  "components": {
    "schemas": {
      "ErrorLog": {
        "type": "object",
        "title": "ErrorLog",
        "description": "Error log entry",
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "error_type": {
            "type": "string",
            "description": "Type of error",
            "example": "runtime_error"
          },
          "id": {
            "type": "string",
            "description": "Error ID"
          },
          "message": {
            "type": "string",
            "description": "Error message"
          },
          "severity": {
            "type": "string",
            "description": "Error severity level",
            "example": "high",
            "enum": [
              "critical",
              "high",
              "medium",
              "low",
              "info"
            ]
          },
          "source": {
            "type": "string",
            "description": "Source of the error"
          },
          "stack_trace": {
            "type": "string",
            "description": "Stack trace of the error"
          },
          "status": {
            "type": "string",
            "description": "Error status",
            "example": "new",
            "enum": [
              "new",
              "acknowledged",
              "resolved"
            ]
          }
        },
        "required": [
          "id",
          "error_type",
          "message",
          "severity",
          "created_at"
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "title": "ErrorResponse",
        "description": "Standard error response",
        "properties": {
          "code": {
            "type": "string",
            "description": "Error code identifier",
            "example": "INTERNAL_ERROR"
          },
          "details": {
            "type": "object",
            "description": "Additional error details",
            "properties": {
              "validation": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "field": {
                      "type": "string"
                    },
                    "reason": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "message": {
            "type": "string",
            "description": "Human-readable error message",
            "example": "An unexpected error occurred"
          }
        },
        "required": [
          "code",
          "message"
        ]
      },
      "EventLog": {
        "type": "object",
        "title": "EventLog",
        "description": "Event log entry",
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "data": {
            "type": "object",
            "description": "Event data payload"
          },
          "event_type": {
            "type": "string",
            "description": "Type of event",
            "example": "user_action"
          },
          "id": {
            "type": "string",
            "description": "Event ID"
          },
          "project_id": {
            "type": "string",
            "description": "Project ID associated with event"
          },
          "source": {
            "type": "string",
            "description": "Event source",
            "example": "api"
          },
          "user_id": {
            "type": "string",
            "description": "User ID associated with event"
          }
        },
        "required": [
          "id",
          "event_type",
          "source",
          "created_at"
        ]
      },
      "HealthCheckResponse": {
        "type": "object",
        "title": "HealthCheckResponse",
        "description": "Health check response",
        "properties": {
          "components": {
            "type": "object",
            "properties": {
              "cache": {
                "type": "string",
                "description": "Cache status",
                "example": "healthy"
              },
              "database": {
                "type": "string",
                "description": "Database status",
                "example": "healthy"
              },
              "external_services": {
                "type": "string",
                "description": "External services status",
                "example": "degraded"
              }
            }
          },
          "status": {
            "type": "string",
            "description": "Overall health status",
            "example": "healthy",
            "enum": [
              "healthy",
              "degraded",
              "unhealthy"
            ]
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Health check timestamp"
          }
        },
        "required": [
          "status",
          "timestamp"
        ]
      },
      "HealthStatus": {
        "type": "string",
        "enum": [
          "healthy",
          "degraded",
          "unhealthy"
        ]
      },
      "Integration": {
        "type": "object",
        "title": "Integration",
        "description": "Third-party integration",
        "properties": {
          "config": {
            "type": "object",
            "description": "Integration configuration"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether integration is enabled"
          },
          "id": {
            "type": "string",
            "description": "Integration ID"
          },
          "provider": {
            "type": "string",
            "description": "Integration provider",
            "example": "slack"
          },
          "type": {
            "type": "string",
            "description": "Integration type",
            "example": "slack"
          }
        },
        "required": [
          "id",
          "type",
          "provider"
        ]
      },
      "Notification": {
        "type": "object",
        "title": "Notification",
        "description": "User notification",
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "id": {
            "type": "string",
            "description": "Notification ID"
          },
          "message": {
            "type": "string",
            "description": "Notification message"
          },
          "read": {
            "type": "boolean",
            "description": "Whether notification has been read"
          },
          "title": {
            "type": "string",
            "description": "Notification title"
          },
          "type": {
            "type": "string",
            "description": "Notification type",
            "enum": [
              "info",
              "warning",
              "error",
              "success"
            ]
          },
          "user_id": {
            "type": "string",
            "description": "User ID"
          }
