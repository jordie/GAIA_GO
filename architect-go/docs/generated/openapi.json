  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "User Login",
        "description": "Authenticate user and create a session",
        "operationId": "login",
        "requestBody": {
          "description": "Login credentials",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "password123"
                  },
                  "username": {
                    "type": "string",
                    "example": "architect"
                  }
                },
                "required": [
                  "username",
                  "password"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "User Logout",
        "description": "Invalidate the current session",
        "operationId": "logout",
        "responses": {
          "204": {
            "description": "Logout successful"
          }
        }
      }
    },
    "/errors": {
      "get": {
        "tags": [
          "Errors"
        ],
        "summary": "List Errors",
