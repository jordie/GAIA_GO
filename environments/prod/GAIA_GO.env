# GAIA_GO PRODUCTION ENVIRONMENT
# Purpose: Stable, self-improving orchestration engine
# Stability: Guaranteed, dogfooding GAIA_GO to build GAIA_GO
# Database: prod_gaia.db (mission-critical, backed up)

GAIA_ENV=prod
GAIA_VERSION=1.0.0
GAIA_ENVIRONMENT_DIR=/Users/jgirmay/Desktop/gitrepo/pyWork/GAIA_GO/environments/prod

# Production Server
GAIA_PORT=8080
GAIA_HOST=0.0.0.0
GAIA_LOG_LEVEL=warn
GAIA_DEBUG=false

# Self-Improvement Settings (Dogfooding)
GAIA_SELF_IMPROVE=true
GAIA_AUTO_BUILD=true
GAIA_AUTO_TEST=true
GAIA_AUTO_DEPLOY=true
GAIA_DOGFOOD=true
GAIA_AGGRESSIVE_OPTIMIZATION=true

# Production Features
GAIA_EXPERIMENTAL_FEATURES=false
GAIA_CODE_PROFILING=true
GAIA_MEMORY_PROFILING=true

# Database
GAIA_DB_PATH=./data/prod_gaia.db
GAIA_DB_AUTO_MIGRATE=false
GAIA_DB_RESET_ON_ERROR=false
GAIA_DB_BACKUP_ENABLED=true
GAIA_DB_BACKUP_INTERVAL_HOURS=1

# Logging
GAIA_LOG_DIR=./logs
GAIA_LOG_MAX_SIZE=100M
GAIA_LOG_RETENTION_DAYS=90

# Task Queue
GAIA_TASK_QUEUE=true
GAIA_TASK_WORKER_THREADS=16
GAIA_TASK_TIMEOUT_MINUTES=60

# Metrics & Monitoring
GAIA_METRICS_ENABLED=true
GAIA_METRICS_PORT=9092
GAIA_HEALTH_CHECK_ENABLED=true
GAIA_HEALTH_CHECK_INTERVAL_SECONDS=30

# Production Security
GAIA_SKIP_AUTH=false
GAIA_CORS_ALLOW_ALL=false
GAIA_VERBOSE_ERRORS=false
GAIA_TLS_ENABLED=true
GAIA_TLS_CERT_FILE=./config/cert.pem
GAIA_TLS_KEY_FILE=./config/key.pem

# Production Availability
GAIA_GRACEFUL_SHUTDOWN=true
GAIA_SHUTDOWN_TIMEOUT_SECONDS=30
GAIA_MAX_CONNECTIONS=1000
GAIA_CONNECTION_TIMEOUT_SECONDS=60
