# GAIA_GO Production Environment
# High-performance, secure, monitored

# Database
GAIA_DB_PATH=./data/gaia_prod.db
DATABASE_URL=postgresql://user:password@prod-db:5432/gaia_prod
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600

# Server
GAIA_HOST=0.0.0.0
GAIA_PORT=8080
GAIA_ENV=production
DEBUG=false

# API Keys (from secure vault)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}

# LLM Configuration
LLM_FAILOVER_ENABLED=true
LLM_DEFAULT_PROVIDER=claude
OLLAMA_ENDPOINT=http://localhost:11434
ANYTHINGLLM_ENDPOINT=http://localhost:3001

# Security
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/gaia/ssl/cert.pem
SSL_KEY_PATH=/etc/gaia/ssl/key.pem
CSRF_PROTECTION=true
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/gaia/gaia.log
SENTRY_DSN=${SENTRY_DSN}

# Session Management
SESSION_TIMEOUT=1800
AUTO_CONFIRM_ENABLED=false
SESSION_SECURE_COOKIES=true

# Feature Flags (production only stable features)
FEATURE_RATE_LIMITING=true
FEATURE_BULK_OPERATIONS=true
FEATURE_APPEAL_NEGOTIATION=true
FEATURE_DISTRIBUTED_TRACING=false

# Performance
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=60
ENABLE_PROFILING=false
ENABLE_DETAILED_ERRORS=false

# Monitoring & Alerting
MONITORING_ENABLED=true
ALERT_EMAIL=${ALERT_EMAIL}
HEALTH_CHECK_INTERVAL=300
